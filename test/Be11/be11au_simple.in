# 11Be=10Be + n - simplified test
 &SYSTEM  Zv=0. Av=1.0087   sn=0.5
          Zc=4. Ac=10.013   /

 &corestates spin=0.0 parity=+1 ex=0.0 /
 &corestates /

 &output wfout(:)=1 xcdcc=F verb=0 /

 &GRID  ng=0 rmin=0.0 rmax=150.0 dr=0.05 rint=70 /

# Summers S3
 &POTENTIAL ptype=1 ap=1 at=0 
           vl0(0:9)=-54.85 -47.77 -54.85 -47.77 -54.85 -47.77 -54.85 -47.77 -54.85 -47.77
