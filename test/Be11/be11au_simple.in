&numerov hcm=0.05 rmaxcc=250 hort=6 method=5 rcc=9.651 skip=f jtmin=0.5 jtmax=0.5 ns=10 nlag=40 /

&xsections fileamp='fort.37' thmin=0. thmax=180. dth=0.2 doublexs=f triplexs=f icore=1 /

