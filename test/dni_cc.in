 &belambda  ifbel=f uwfgsfile="" lambda=1 nk=100 emin=0.1 emax=20 jset=2 /
 &bmlambda /

############################    REACTION       ####################################
&reaction elab=56   namep='d' mp=2.014 mt=12 namet='12C' zt=6 jt=0.0 / 
   

######################### COUPLING POTENTIALS FOR (X)CDCC ####################################
# (if no basis sets have been defined, this section will be skipped)
# ############################################################################################

&TRANS skip=T  rcc=4.614  writeff=F   /

&coupling qcmax=0  ncoul=0  lamax=8 /

&grid nquad=100  radmax=100.d0 rstep=0.1 rmax=100 rextrap=0 rvecin=0.1d0 drvec=0.025d0 hin=0.1 /

# Core-target (p+58Ni): KD
&corepotential ptype=1 ap=0 at=12  rc0=1.3
                  V0=-53.29 r0=1.124  a0=0.57  V0i=-0 r0i=1.17 a0i=0.675 / ! WS volume
&corepotential ptype=2 ap=0 at=12
                  V0i=-8.05 r0i=1.124 a0i=0.5 / ! WS deriv
&corepotential ptype=0 /


## Valence-target (n-58Ni):KD
&valencepotential ptype=1  ap=0 at=12  rc0=1.3
              V0=-52.25 r0=1.124  a0=0.57  V0i=-0 r0i=1.17 a0i=0.75 / ! WS volume.
&valencepotential ptype=2  ap=0 at=12  
             V0i=-8.05 r0i=1.124 a0i=0.5 / ! WS deriv
&valencepotential ptype=0 /



######################### SOLVE CC EQUATIONS ##############################
# method=0 PC-numerov, 
         1=ENA with 5 terms in Cosh[Sqrt[T]]
         2=ENA with 5 terms in Cosh[Sqrt[T]], only diagonal 
         3=Raynal
         4=Modified Numerov used in Fresco

&numerov hcm=0.05 rmaxcc=100  hort=5 method=4 jtmin=0 jtmax=50 skip=T /   


######################### TRIPLE DIFFERENTIAL CROSS SECTINS ##############################
&xsections fileamp="fort.137" thmin=0 thmax=180 dth=1  
           doublexs=F triplexs=F alphaxs=F   icore=1 ner=200 
           ermin=0.01 ermax=60 jsets(1:6)=F T T T T T/ T T T /

&framework sys='lab' idet=1 / 
&gridener Enlow=0.0 Enup=44.8 dEn=0.8 /      
&gridthetac tcl=0.0 tcu=180  dtc=1.0 /      
&gridthetav tvl=0.0 tvu=180  dtv=1.0  /
&gridphi phil=0.0 phiu=360 dphi=2.0 /
&polarization polar(1:3)=1.5d0 0d0 1.5d0 /

